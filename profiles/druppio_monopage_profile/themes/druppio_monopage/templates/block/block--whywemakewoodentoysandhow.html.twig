<section{{ attributes.addClass('block', 'clearfix', 'background-block',  blockid ) }} style='background-image: url({{ file_url(content.field_background_image.0['#item'].entity.uri.value) }}) ;'>

    {% block content %}
    <div class='container-wrapper'>
        <div class='container'>

            <div class='field-image col-sm-6'>
                {{ content.field_image }}
            </div>
            <div class='field-body col-sm-6'>
                {{ title_prefix }} {% if label %}
                <h2{{ title_attributes.addClass( 'block-title') }}>{{ label }}</h2>
                    {% endif %} {{ title_suffix }} {{ content.body }}
            </div>
        </div>
    </div>
    {% endblock %}

</section>
